@model Blog.Areas.Admin.ViewModels.ArticleCategory.ArticleCategoryViewModel
<div class="card">
  <div class="card-body">
    @if (!String.IsNullOrEmpty((string)TempData["message"]!))
    {
      <div class="alert alert-success" role="alert">@TempData["message"]</div>
    }
    <div class="row">
      <form class="col" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="form-group">
          <label asp-for="ParentId" class="control-label"></label>
          <select
            asp-for="ParentId"
            asp-items="@Model.ParentList"
            class="form-control"
          >
            <option value="">Select a parent</option>
          </select>
        </div>
        <div class="form-group">
          <label asp-for="@Model.Name"></label>
          <input class="form-control" asp-for="@Model.Name" />
          <p>
            <small>
              @Html.ValidationMessageFor(m => m.Name, "", new { @class
              ="text-danger" })
            </small>
          </p>
        </div>
        <div class="form-group">
          <label asp-for="@Model.Slug"></label>
          <input class="form-control" asp-for="@Model.Slug" />
          <p>
            <small>
              @Html.ValidationMessageFor(m => m.Slug, "", new { @class
              ="text-danger" })
            </small>
          </p>
        </div>
        <div class="form-group">
          <button class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </div>
  `
</div>
@section Scripts {
  <script></script>
} 
