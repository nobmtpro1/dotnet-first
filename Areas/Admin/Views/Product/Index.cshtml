@model Blog.Areas.Admin.ViewModels.Product.ProductListViewModel
<div class="card">

  <div class="card-body">
      @if (!String.IsNullOrEmpty((string)TempData["message"]!))
  {
    <div class="alert alert-success" role="alert">@TempData["message"]</div>
  }
    <div class="row mb-3">
      <div class="col">
          <a asp-action="Add" class="btn btn-primary btn-sm">ADD</a>
      </div>
    </div>
    <table class="table table-striped" id="table1">
      <thead>
        <tr>
          <th>STT</th>
          <th>Name</th>
          <th>Created at</th>
          <th>Updated at</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
   
        @if (@Model.Products != null)
        {
          var i = 0;
          foreach (var product in Model.Products)
            {
              ++i;
              <tr>
                <td>@i</td>
                <td>@product.Name</td>
                <td>@product.CreatedAt</td>
                <td>
                  @product.UpdatedAt
                </td>
                <td>
                  <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary m-2 btn-sm">EDIT</a>
                  <a onclick="return confirm('are you sure?')" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger m-2 btn-sm">DELETE</a>
                  </td>
              </tr>
            }
        }


      </tbody>
    </table>
  </div>
</div>
@section Scripts {
    <script>
        // Simple Datatable
        let table1 = document.querySelector('#table1');
        let dataTable = new simpleDatatables.DataTable(table1);
    </script>
}

